{
  "name": "yolo-annotator",
  "version": "1.0.0",
  "description": "Desktop image annotation tool for YOLO models",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "sharp": "^0.32.6",
    "fs-extra": "^11.1.1",
    "yaml": "^2.3.4",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yolo.annotator",
    "productName": "YOLO Annotator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "processor.js",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons"
    }
  },
  "author": "",
  "license": "MIT"
}
